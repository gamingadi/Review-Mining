        <div class="form-container">
            <h1> RESTAURANT ENTRY </h1>
            <form action="/restaurent" method="post">
                <div class="form">
                    <div class="input-group">
                        <input type="text" name="restaurant" required class="form-control" id="restaurant" list="list">
                        <span class="input-group-text">Enter restaurant name</span>
                    </div>
                    <hr>
                    <div class="img">
                    <div class="input-group">
                        <img src='https://cdn0.iconfinder.com/data/icons/hotel-129/64/location-map-place-point-placeholder-512.png' class="form-label alt="img"/>
                        <input type="url" class="form-control" placeholder="Enter Image URL" name="img">
                    </div>
                </div>
                    <div class="floating-labels mb-3">
                        <label for="address" class="form-label">Location/Address of restaurant</label>
                        <textarea class="form-control" required id="address" name='address' rows="3"></textarea>
                    </div>

                    <div class="row ">
                        <div class="col">
                            <span class="form-label">OPENING TIME</span>
                            <input class="form-control" required type="time" name="opening" id="">
                        </div>
                        <div class="col">
                            <span class="form-label">CLOSING TIME</span>
                            <input type="time" required name="closing" class="form-control" id="closing">
                        </div>
                        <div class="col">
                            <span class="form-label">Contact Number</span>
                            <input type="tel"   name="contact" class="form-control" id="contact">
                        </div>
                    </div>
                    <hr>
                    <div class="floating-labels">
                        <span class="form-label">Rating</span>
                        <select class="col-3" name="rating" id="rating">
                            <option value=1>One</option>
                            <option value=2 selected>Two</option>
                            <option value=3>Three</option>
                            <option value=4>Four</option>
                            <option value=5>Five</option>

                        </select>
                    </div>

                    <hr>
                    <button class="btn btn-warning" type="submit">Submit</button>


                </div>
            </form>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
        integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
        integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
    </script>
    <script>
        const saved="<%=saved%>"
        if(saved==='true'){
            alert("Data Entry Succesfull")
        }
    </script>
</body>

</html>