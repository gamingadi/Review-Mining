<%-include("header")%>
<body>
  <%-include("nav")%>
    <section>
        <form action="/" method="post">
        <div class="search">
            <div class="input-group">
                <input list="ResturentList" name="value" placeholder="Search the Restaurent" type="search" class="form-control">
                <select name="search" class="input-group-text">
                    <option value="address">Address</option>
                    <option selected value='name'>Name</option>
                </select>
                <button type="submit" class="input-group-text"><i class="fa fa-search"></i>Search</button>
            </div>
        </div>
        <datalist id="ResturentList">
           <%result.forEach((result)=>{%>
            <option value=<%=result.name%>></option>
           <%})%>
        </datalist>
    </form>
    </section>
    <section>
        <!--  -->
        <div class='resturent row align-item-start'>
            <%result.forEach((result)=>{%>
                <%-include("card",{result:result})%>
                <%})%>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
        integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
        integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
    </script>
</body>

</html>