<%-include("header")%>
<body>
    <%-include("nav")%>
    <section>
        <!-- review
    resturent
    img
    rating -->
           
    <div class="form-container">
        <h1>Give Restaurant Review</h1>
            <form action="/review" method="post">
                <div class="form">
                    <div class="mb-3">
                        <label for="restaurant" class="form-label">Select restaurant </label>
                        <select id='restaurant' name="restaurant">
                           <%name.forEach((result)=>{%>
                            <option value="<%=result.name%>"><%=result.name%></option>
                           <%})%>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col">
                           
                                <div class="input-group">
                                <span class="input-group-text">First Name</span>
                                <input class="form-control" type="text" name="Fname">
                            </div>
                            
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text">Last Name</span>
                                <input class="form-control" type="text" name="Lname">
                            </div>
                        </div>
                        <hr>
                            <div class="input-group">
                                <span class="input-group-text">Email</span>
                                <input class="form-control" type="email" name="email">
                        </div>
                    </div>
                      <div class="mb-3">
                        <label for="review" class="form-label">Review</label>
                        <textarea name="review" class="form-control" id="review" rows="3"></textarea>
                      </div>
                      <div class="input-group">
                          <span class="input-group-text">img</span>
                          <input type="url" class="form-control" placeholder="Enter image URL" name="img">
                      </div>
                      <hr>
                      <div class="input-group flex-nowrap">
                        <span class="form-label">Give Rating</span>
                        <input type="range" class="form-range" min="0" max="5" value="1" name="rating">
                    </div>
                    <hr>
                        <button class="btn btn-warning" type="submit">Submit</button>
                    

                 </div>
            </form>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
        integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
        integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous">
    </script>
